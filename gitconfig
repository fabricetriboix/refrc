[core]
    editor = vi
    pager = less -x4
    whitespace = cr-at-eol

[diff]
    tool = vimdiff

[fetch]
    prune = true

[merge]
    tool = vimdiff
    ff = false
    conflictstyle = diff3

[push]
    default = simple

[pull]
    rebase = false

[alias]
    co = checkout
    ci = commit
    br = branch
    st = status
    l = log --pretty=format:'%h %s' --graph --color
    ll = log --pretty=format:'%h (%d) %s' --graph --color --all
    cc = clean -dxff --dry-run
    ccc = clean -dxff
